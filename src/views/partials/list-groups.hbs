{{#each groups}}
  <div class="box box-link-hover-shadow">
    <h2 class="title">
      {{title}}
    </h2>
    <a href="/group/{{_id}}" class="button">
      <span class="icon is-small">
        <i class="fas fa-folder-open"></i>
      </span>
    </a>
    <a href="/dashboard/deletegroup/{{_id}}" class="button">
      <i class="fas fa-trash"></i>
    </a>
    <a href="/dashboard/editgroup/{{_id}}" class="button">
      <i class="fas fa-pencil"></i>
    </a>
  </div>
{{/each}}
